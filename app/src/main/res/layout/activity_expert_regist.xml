<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".expert.ExpertActivity"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/expert_regist"
        android:layout_width="278dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:text="전문가 회원가입"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="344dp"
        android:layout_height="596dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expert_regist">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_expert_id"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="아이디"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="127dp" />

            <EditText
                android:id="@+id/first_expert_id_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="아이디를 입력하세요."
                android:inputType="text"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="160dp" />

            <TextView
                android:id="@+id/first_expert_pwd"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="비밀번호"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="234dp" />

            <EditText
                android:id="@+id/first_expert_pwd_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="비밀번호를 입력하세요."
                android:inputType="textPassword"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="274dp" />

            <TextView
                android:id="@+id/expert_name"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="이름"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="234dp" />

            <EditText
                android:id="@+id/expert_name_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="이름을 입력하세요."
                android:inputType="textPersonName"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="274dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="이메일"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="234dp" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="이메일을 입력하세요."
                android:inputType="textEmailAddress"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="274dp" />

            <TextView
                android:id="@+id/institution"
                android:layout_width="295dp"
                android:layout_height="56dp"
                android:text="기관"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="234dp" />

            <EditText
                android:id="@+id/institution_input"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="기관을 입력하세요."
                android:inputType="text"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="274dp" />

            <Button
                android:id="@+id/expert_regist_btn"
                android:layout_width="275dp"
                android:layout_height="64dp"
                android:text="전문가 회원가입 하기"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="633dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>